{
  "name": "ckb-mnft-tutorial",
  "version": "0.0.4",
  "description": "A tutorial about multi-purpose NFT (mNFT) on CKB, guide you the process of creating an issuer cell, a class cell, and an NFT cell.",
  "keywords": ["ckb", "tutorial", "nft"],
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "prepare": "husky install",
    "issuer:create": "ts-node src/example/issuer-create.ts",
    "start:class": "ts-node src/example/class.ts",
    "start:nft": "ts-node src/example/nft.ts",
    "build": "tsc -p .",
    "test": "jest",
    "lint": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@ckb-lumos/lumos": "0.20.0-alpha.3",
    "@nervosnetwork/ckb-sdk-core": "^0.109.0",
    "camelcase-keys": "^7.0.0",
    "dotenv": "^16.0.3",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "husky": "^8.0.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
